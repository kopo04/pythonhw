#include <stdio.h>

int main(void) {
    int temp;

    printf("현재 온도를 입력하세요: ");
    scanf("%d", &temp);

    if (temp < 0) {
        // 온도가 0도 미만인 경우
        printf("한파 경고! 패딩과 장갑, 모자를 착용하세요.\n");
    }
    else if (temp >= 0 && temp <= 4) {
        // 온도가 0도 이상 4도 이하인 경우
        printf("매우 춥습니다! 두꺼운 외투를 꼭 입으세요.\n");
    }
    else if (temp >= 5 && temp <= 14) {
        // 온도가 5도 이상 14도 이하인 경우
        printf("조금 쌀쌀합니다! 따뜻한 옷을 입으세요.\n");
    }
    else if (temp >= 15 && temp <= 24) {
        // 온도가 15도 이상 24도 이하인 경우
        printf("선선한 날씨입니다! 가벼운 겉옷을 챙기세요.\n");
    }
    else if (temp >= 25 && temp <= 29) {
        // 온도가 25도 이상 29도 이하인 경우
        printf("따뜻한 날씨입니다! 가벼운 옷을 입으세요.\n");
    }
    else {
        // 온도가 30도 이상인 경우
        printf("너무 더워요! 반팔과 반바지를 입으세요.\n");
    }

    return 0;
}
