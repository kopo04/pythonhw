#include <stdio.h>

int main(void){
    int temp;
    int category;
    
    printf("현재 온도를 입력하세요: ");
    scanf("%d", &temp);
    
    if (temp < 0)
        category = -1;
    else
        category = temp / 5;
        
    switch (category){
        case -1:
        //온도가 0도 미만
            printf("한파 경고! 패딩과 장갑, 모자를 착용하세요.\n");
            break;
        case 0:
        //온도가 0도 이상 4도 이하
            printf("매우 춥습니다! 두꺼운 외투를 꼭 입으세요.\n");
            break;
        case 1: //5도~9도
        case 2:
        
    }
    
    return 0;
}

