#include <stdio.h>

int main(void)
{
    int num;
    int hundred, ten, one;
    int sum;
    
    printf("0부터 999까지의 정수를 입력하세요:");
    scanf("%d", &num);
    if (num < 0 || num > 999){
        printf("입력값이 범위를 벗어났습니다.\n");
    } 
    
    hundred = num / 100;
    ten = (num % 100) / 10;
    one = num % 10;
    
    sum = hundred + ten + one;
    
    //숫자가 3의 배수이면서 홀수인 경우 
    if (num % 3 == 0 && num % 2 == 1){
        printf("1.특별한 숫자 입니다.");
    }
    //숫자의 각 자리의 합이 7의  배수인 경우
    else if (sum % 7 == 0){
        printf("2.특별한 숫자 입니다.");
    }
    //숫자의 첫번째 자리 숫자가 마지막 자리 숫자보다 큰 경우
    else if ((num >= 100 && hundred > one) || (num >= 10 && num < 100 && ten > one)){
        printf("3.특별한 숫자 입니다.");
    }
    return 0;
}
