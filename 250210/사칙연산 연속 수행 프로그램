#include <stdio.h>

void main()
{   int sum;
    int num;
    int hundred;
    int ten;
    int one;
    
    printf("세 자리의 정수를 입력하세요");
    
    scanf("%d", &num);
    
    hundred = num / 100;
    ten = (num % 100) / 10;
    one = num % 10;
    
    sum = hundred + ten + one;
    
    printf("합: %d", sum);
}
